<ProxyEndpoint name="default">
  <Description>Swagger API</Description>
  <PreFlow name="PreFlow">
    <Request/>
    <Response/>
  </PreFlow>
  <Flows>
    <Flow name="hello">
      <Condition>(proxy.pathsuffix MatchesPath "/hello") and (request.verb = "GET")</Condition>
      <Description/>
      <Request/>
      <Response/>
    </Flow>
	<Flow name="hello">
      <Condition>(proxy.pathsuffix MatchesPath "/hi") and (request.verb = "GET")</Condition>
      <Description/>
      <Request/>
      <Response/>
    </Flow>
  </Flows>
  <PostFlow name="PostFlow">
    <Request/>
    <Response/>
  </PostFlow>
  <HTTPProxyConnection>
    <BasePath>/hello/v1</BasePath>
    <VirtualHost>default</VirtualHost>
    <VirtualHost>secure</VirtualHost>
  </HTTPProxyConnection>
  <RouteRule name="default">
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
